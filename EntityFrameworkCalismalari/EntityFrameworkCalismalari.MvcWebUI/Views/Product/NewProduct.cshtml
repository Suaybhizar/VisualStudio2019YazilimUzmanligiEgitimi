
@{
    ViewData["Title"] = "NewProduct";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model NewProductVm


<h1>Ürün Ekleme Formu</h1>
<!--TAG HELPERS-->



<div class="row">
    <div class="col-md-3">
        @await Component.InvokeAsync("CategoryMenu")
    </div>
    <div class="col-md-9">
        <form asp-route="newProduct">
            <div class="mb-3">
                <label>Ürün Adı</label>
                @*<input type="text" class="form-control" id="txtProductName" name="ProductName">*@
                <input asp-for="NewProduct.ProductName" class="form-control">
            </div>
            <div class="mb-3">
                <label>Birim Çıklaması</label>
                <input asp-for="NewProduct.QuantityPerUnit" class="form-control">
            </div>
            <div class="mb-3">
                <label>Fiyatı</label>
                <input asp-for="NewProduct.UnitPrice" class="form-control">
            </div>
            <div class="form-group">
                <label>
                    Kategorisi
                    <select asp-for="NewProduct.CategoryId" class="form-control" asp-items="Model.Categories"></select>
                </label>
            </div>
            <div class="form-group">
                <label>
                    Tedarikçiler
                    <select asp-for="NewProduct.SupplierID" class="form-control" asp-items="Model.Suppliers"></select>
                </label>
            </div>
            <div class="form-check">
                <input asp-for="NewProduct.Discontinued" class="form-check-input" value="Discontinued">
                <label class="form-check-label" for="flexCheckDefault">
                    Bitti
                </label>
            </div>
            <div class="mb-3">

                <input type="submit" class="btn-primary" id="btnSave" value="KAYDET" />
            </div>
        </form>
    </div>

</div>

























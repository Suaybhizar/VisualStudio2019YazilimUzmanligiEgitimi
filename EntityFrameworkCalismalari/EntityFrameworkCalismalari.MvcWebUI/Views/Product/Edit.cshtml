
@{
    ViewData["Title"] = "Edit";
}
@model ProductEditVm


<h1>Ürün Düzeleme Formu</h1>
<form action="/Product/Edit" method="post">
    <input type="hidden" name="ProductID" value="@Model.ProductToEdit.ProductID"/>
    <div class="mb-3">
        <label>Ürün Adı</label>
        <input type="text" class="form-control" id="txtProductName" name="ProductName" value="@Model.ProductToEdit.ProductName">
    </div>
    <div class="mb-3">
        <label>Birim Çıklaması</label>
        <input type="text" class="form-control" id="txtQuantityPerUnit" name="QuantityPerUnit" value="@Model.ProductToEdit.QuantityPerUnit">
    </div>
    <div class="mb-3">
        <label>Fiyatı</label>
        <input type="text" class="form-control" id="txtUnitPrice" name="UnitPrice" value="@Model.ProductToEdit.UnitPrice.Value">
    </div>
    <div class="form-group">
        <label>
            Kategorisi
            <select class="form-control" id="ddlCategories" name="CategoryId">
                @foreach (var item in Model.Categories)
                {
                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                }


            </select>
        </label>
    </div>
    <div class="form-group">
        <label>
            Tedarikçiler
            <select class="form-control" id="ddlSuppliers" name="SupplierID">
                @foreach (var item in Model.Suppliers)
                {
                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                }

            </select>
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="chkDiscontinued" name="Discontinued" @(Model.ProductToEdit.Discontinued ? "checked" : "")>
        <label class="form-check-label" for="flexCheckDefault">
            Bitti
        </label>
    </div>
    <div class="mb-3">

        <input type="submit" class="btn-primary" id="btnSave" value="KAYDET" />
    </div>
</form>
